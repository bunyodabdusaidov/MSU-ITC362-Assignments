<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/label_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/label_task" />

    <EditText
        android:id="@+id/input_task"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/label_task"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="-6dp"
        android:layout_toRightOf="@+id/label_task"
        android:orientation="horizontal" />

    <DatePicker
        android:id="@+id/simpleDatePicker"
        android:layout_width="242dp"
        android:layout_height="393dp"
        android:layout_below="@id/input_task"
        android:layout_alignBottom="@id/input_task"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="-406dp" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/simpleDatePicker"
        android:layout_marginTop="-231dp"
        android:layout_marginBottom="-74dp"
        android:layout_marginLeft="100dp"
        android:onClick="insert"
        android:text="@string/button_add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/simpleDatePicker"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="-231dp"
        android:layout_marginBottom="-74dp"
        android:layout_toRightOf="@id/button_add"
        android:onClick="goBack"
        android:text="@string/button_back" />

</RelativeLayout>